@page
@model LanguageCourses.Pages.Students.IndexModel

@{
    ViewData["Title"] = "Студенты";
}

<h1>Студенты</h1>

<p>
    <a asp-page="Create">Добавить студента</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].Hobby)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hobby)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.StudentID">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.StudentID">Детали</a> |
                <a asp-page="./Delete" asp-route-id="@item.StudentID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
