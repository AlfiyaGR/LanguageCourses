@page
@model LanguageCourses.Pages.Students.DetailsModel

@{
    ViewData["Title"] = "Детали";
}

<h1>Детали</h1>

<div>
    <h4>Студент</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.BirthDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Level)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Level)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Hobby)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Hobby)
        </dd>
        <dt class="col-sm-2">
            Курсы
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Курс</th>
                    <th>Язык</th>
                    <th>Тема</th>
                    <th>Цена</th>
                    <th>Уровень подготовки</th>
                    <th>Начинается с</th>
                </tr>
                @foreach (var item in Model.Student.Courses)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Language.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Theme)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.TrainingLevel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Time)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Student?.StudentID">Редактировать</a> |
    <a asp-page="./Index">Вернуться к списку</a>
</div>
