    <h4>Отзыв</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.Text)
        </dt>
