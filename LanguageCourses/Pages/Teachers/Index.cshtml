@page
@model LanguageCourses.Pages.Teachers.IndexModel

@{
    ViewData["Title"] = "Учителя";
}

<h1>Учителя</h1>

<p>
    <a asp-page="Create">Добавить учителя</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].Education)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].DateStartTeaching)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Teacher) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Education)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateStartTeaching)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TeacherID">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.TeacherID">Детали</a> |
                <a asp-page="./Delete" asp-route-id="@item.TeacherID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
