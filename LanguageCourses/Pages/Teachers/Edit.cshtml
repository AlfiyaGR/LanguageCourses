@page
@model LanguageCourses.Pages.Teachers.EditModel

@{
    ViewData["Title"] = "Редактировать";
}

<h1>Редактирование</h1>

<h4>Учитель</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Teacher.TeacherID" />
            <div class="form-group">
                <label asp-for="Teacher.Surname" class="control-label"></label>
                <input asp-for="Teacher.Surname" class="form-control" />
                <span asp-validation-for="Teacher.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.Name" class="control-label"></label>
                <input asp-for="Teacher.Name" class="form-control" />
                <span asp-validation-for="Teacher.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.LastName" class="control-label"></label>
                <input asp-for="Teacher.LastName" class="form-control" />
                <span asp-validation-for="Teacher.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.Education" class="control-label"></label>
                <input asp-for="Teacher.Education" class="form-control" />
                <span asp-validation-for="Teacher.Education" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.DateStartTeaching" class="control-label"></label>
                <input asp-for="Teacher.DateStartTeaching" class="form-control" />
                <span asp-validation-for="Teacher.DateStartTeaching" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                foreach(var course in Model.AssignedCourseDataList)
                                {
                                    @:</tr><tr>
                                    @:<td>
                                        <input type ="checkbox"
                                               name ="selectedCourses"
                                               value="@course.CourseID"
                                               @(Html.Raw(course.Assigned ? "checked=\"checked\"" : "")) />
                                               @: @course.Title
                                    @:</td>
                                }
                        @:</tr>
                            }
                    </table>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
