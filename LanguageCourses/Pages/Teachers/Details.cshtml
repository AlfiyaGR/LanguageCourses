@page
@model LanguageCourses.Pages.Teachers.DetailsModel

@{
    ViewData["Title"] = "Детали";
}

<h1>Детали</h1>

<div>
    <h4>Учитель</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.Education)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.Education)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher.DateStartTeaching)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.DateStartTeaching)
        </dd>
        <dt class="col-sm-2">
            Курсы
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Курс</th>
                    <th>Язык</th>
                    <th>Тема</th>
                    <th>Цена</th>
                    <th>Уровень подготовки</th>
                    <th>Старт курса</th>
                </tr>
                @foreach (var item in Model.Teacher.Courses)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Language.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Theme)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.TrainingLevel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Time)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Teacher?.TeacherID">Редактировать</a> |
    <a asp-page="./Index">Вернуться к списку</a>
</div>
